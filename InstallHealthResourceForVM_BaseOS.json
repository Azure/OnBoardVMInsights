{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "allowedValues": [
        "East US",
        "eastus",
        "West Central US",
        "westcentralus"
      ],
      "metadata": {
        "description": "Location to deploy resource to."
      }
    },
    "vmName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the VM in current subscription and resource group, this resource is associated with."
      }
    }
  },
  "variables": {
    "workloadType": "BaseOS",
    "resourceName": "[concat(toLower(parameters('vmName')), '_', toLower(variables('workloadType')))]"
  },
  "resources": [
    {
      "name": "[variables('resourceName')]",
      "type": "Microsoft.WorkloadMonitor/workloadInsights",
      "apiVersion": "2018-01-29-privatepreview",
      "location": "[parameters('location')]",
      "properties": {
        "workloadType": "[variables('workloadType')]",
        "vmIds": "[createArray(resourceId(subscription().subscriptionId, resourceGroup().name, 'Microsoft.Compute/virtualMachines',parameters('vmName')))]"
      }
    }
  ],
  "outputs": {}
}